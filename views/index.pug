    .left-column(style='width: 20%;')
      br
      br
      div#deal(class='tally')
      div#play(class='tally')
      br
      br
      img(src="https://i.pinimg.com/originals/40/66/44/40664440b9dcbf61bbd896b919c6b703.png")(style="height: 200px;")
      br
      br
      br
      br
      .ui.green.button#hit(style="margin-bottom: 7px;")
