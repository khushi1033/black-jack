      br
      br
      br
      br
      br
      br
      br
      br
      br
      br
      span#playerScore(class='score') PLAYER SCORE
      br

  .ui.modal#startModal
    div.modal-content Welcome to Blackjack
    .ui.green.button.deal
      | Deal
    br

  .ui.modal#winModal
    div.modal-content You won!
    br
    .ui.green.button.deal
      | Play Again
    br

  .ui.modal#loseModal
    div.modal-content You Lost
    br
    .ui.green.button.deal
      | Play Again
